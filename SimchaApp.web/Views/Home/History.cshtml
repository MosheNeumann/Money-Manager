@using SimchaApp.web.Models
@using SimchaApp.data
@model HistoryViewModelView

<div class="container">
    <div class="page-header text-center">
        <h1>History for @Model.Contributor.Name</h1>
        <h2>Current balance: @Model.Contributor.Balance</h2>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <tr>
            <th>Event</th>
            <th>Date</th>
            <th>Amount</th>
          </tr>
           @foreach (Transaction T in Model.Transactions)
           {
               <tr>
                   <td>@T.Action</td>
                   <td>@T.Date.ToShortDateString()</td>
                   <td>@T.Amount</td>
               </tr>
           }
        </table>
          </div>
        <div style="text-align:center;">
            <a href="Home/contributors" class="btn btn-danger center">Go Back To Contributors</a>

        </div>
        <a href="Home/contributors"class="btn btn-danger center">Go Back To Contributors</a>
      

</div>